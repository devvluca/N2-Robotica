<?xml version="1.0"?>
<robot name="vacuum_robot">
  
  <!-- Base do robô (corpo principal cilíndrico) -->
  <link name="base_link">
    <visual>
      <!-- Corpo principal - cilindro achatado -->
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.16" length="0.06"/>
      </geometry>
      <material name="body_color">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.16" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.5"/>
      <origin xyz="0 0 0.04"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Tampa superior (parte colorida do aspirador) -->
  <link name="top_cover">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.14" length="0.02"/>
      </geometry>
      <material name="cover_color">
        <color rgba="0.1 0.6 0.8 1"/>
      </material>
    </visual>
  </link>

  <joint name="top_cover_joint" type="fixed">
    <parent link="base_link"/>
    <child link="top_cover"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>

  <!-- Indicador de direção (frente) -->
  <link name="front_indicator">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.08 0.015"/>
      </geometry>
      <material name="indicator_color">
        <color rgba="0.9 0.3 0.1 1"/>
      </material>
    </visual>
  </link>

  <joint name="front_indicator_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_indicator"/>
    <origin xyz="0.12 0 0.075" rpy="0 0 0"/>
  </joint>

  <!-- Painel de LEDs/Display -->
  <link name="display">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.05 0.01"/>
      </geometry>
      <material name="display_color">
        <color rgba="0.2 0.8 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="display_joint" type="fixed">
    <parent link="base_link"/>
    <child link="display"/>
    <origin xyz="0.08 0 0.085" rpy="0 0 0"/>
  </joint>

  <!-- Roda esquerda -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="wheel_color">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.12 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Roda direita -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="wheel_color">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.12 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Roda castor traseira -->
  <link name="caster_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="caster_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="-0.12 0 0.015" rpy="0 0 0"/>
  </joint>

  <!-- Sensores ultrassônicos (5 sensores) -->
  <!-- Sensor frontal -->
  <link name="sensor_front">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.015"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="sensor_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_front"/>
    <origin xyz="0.16 0 0.05" rpy="0 1.5708 0"/>
  </joint>

  <!-- Sensor frontal esquerdo (45°) -->
  <link name="sensor_front_left">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.015"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="sensor_front_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_front_left"/>
    <origin xyz="0.113 0.113 0.05" rpy="0 1.5708 0.785"/>
  </joint>

  <!-- Sensor frontal direito (45°) -->
  <link name="sensor_front_right">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.015"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="sensor_front_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_front_right"/>
    <origin xyz="0.113 -0.113 0.05" rpy="0 1.5708 -0.785"/>
  </joint>

  <!-- Sensor lateral esquerdo (90°) -->
  <link name="sensor_left">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.015"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="sensor_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_left"/>
    <origin xyz="0 0.16 0.05" rpy="0 1.5708 1.5708"/>
  </joint>

  <!-- Sensor lateral direito (90°) -->
  <link name="sensor_right">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.015"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="sensor_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_right"/>
    <origin xyz="0 -0.16 0.05" rpy="0 1.5708 -1.5708"/>
  </joint>

  <!-- Escova rotativa (decorativa) -->
  <link name="brush">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.015"/>
      </geometry>
      <material name="brush_color">
        <color rgba="0.6 0.2 0.2 1"/>
      </material>
    </visual>
  </link>

  <joint name="brush_joint" type="fixed">
    <parent link="base_link"/>
    <child link="brush"/>
    <origin xyz="0.06 0 0.01" rpy="0 0 0"/>
  </joint>

</robot>
