<robot name="planar_arm_3dof">
      <link name="base"/>
      <link name="base_visual">
        <visual>
          <origin xyz="0 0 0.08" rpy="0 0 0"/>
          <geometry>
            <box size="0.15 0.15 0.16"/>
          </geometry>
          <material name="base_color">
            <color rgba="0.4 0.4 0.4 1"/>
          </material>
        </visual>
      </link>

      <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base"/>
        <child link="base_visual"/>
      </joint>

      <link name="link1">
        <inertial>
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <mass value="1"/>
          <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
        <visual>
          <!-- joint marker at origin -->
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <sphere radius="0.03"/>
          </geometry>
          <material name="joint_color">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
        </visual>
        <visual>
          <!-- Rectangular link -->
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.5 0.05 0.05"/>
          </geometry>
          <material name="blue">
            <color rgba="0.2 0.2 0.8 1"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.5 0.05 0.05"/>
          </geometry>
        </collision>
      </link>

      <!-- end-effector with gripper -->
      <link name="ee">
        <visual>
          <!-- Left finger -->
          <origin xyz="0.05 0.03 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.15 0.02 0.04"/>
          </geometry>
          <material name="black">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
        </visual>
        <visual>
          <!-- Right finger -->
          <origin xyz="0.05 -0.03 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.15 0.02 0.04"/>
          </geometry>
          <material name="black">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
        </visual>
        <visual>
          <!-- Base of gripper -->
          <origin xyz="0.02 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.04 0.08 0.04"/>
          </geometry>
          <material name="gray">
            <color rgba="0.5 0.5 0.5 1"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0.05 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.15 0.08 0.04"/>
          </geometry>
        </collision>
      </link>

      <!-- joint to connect link3 -->
      <joint name="joint_ee" type="fixed">
        <origin xyz="0.4 0 0" rpy="0 0 0"/>
        <parent link="link3"/>
        <child link="ee"/>
      </joint>


      <link name="link2">
        <inertial>
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <mass value="0.5"/>
          <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
        </inertial>
        <visual>
          <!-- joint marker at origin -->
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <sphere radius="0.03"/>
          </geometry>
          <material name="joint_color">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
        </visual>
        <visual>
          <!-- Rectangular link -->
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.5 0.04 0.04"/>
          </geometry>
          <material name="green">
            <color rgba="0.2 0.8 0.2 1"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.5 0.04 0.04"/>
          </geometry>
        </collision>
      </link>

      <link name="link3">
        <inertial>
          <origin xyz="0.25 0 0" rpy="0 0 0"/>
          <mass value="0.3"/>
          <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
        </inertial>
        <visual>
          <!-- joint marker at origin -->
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <sphere radius="0.03"/>
          </geometry>
          <material name="joint_color">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
        </visual>
        <visual>
          <!-- Rectangular link -->
          <origin xyz="0.2 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.4 0.03 0.03"/>
          </geometry>
          <material name="red">
            <color rgba="0.8 0.2 0.2 1"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0.2 0 0" rpy="0 0 0"/>
          <geometry>
            <box size="0.4 0.03 0.03"/>
          </geometry>
        </collision>
      </link>

      <!-- junta 1: ombro, gira no plano (eixo z) -->
      <joint name="joint1" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base"/>
        <child link="link1"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="20" velocity="2.0"/>
      </joint>

      <!-- junta 2: cotovelo, gira no plano (eixo z) -->
      <joint name="joint2" type="revolute">
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <parent link="link1"/>
        <child link="link2"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="20" velocity="2.0"/>
      </joint>

      <!-- junta 3: pulso, gira no plano (eixo z) -->
      <joint name="joint3" type="revolute">
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <parent link="link2"/>
        <child link="link3"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="20" velocity="2.0"/>
      </joint>
    </robot>